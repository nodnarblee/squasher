<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/application.css">
    </head>
<body>


<h1 class="text-info">Start match here</h1>

<form method="post" action="/match/create">
    
    <div class="btn-group">
      <button class="btn btn-primary btn-default dropdown-toggle" type="button" data-toggle="dropdown">
        Player 1 <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <% @players.each do |player| %>

        <option value = "<%= player.id %>"><%= player.first_name %></option>

        <% end %>
      </ul>
    </div>

    <div class="btn-group">
      <button class="btn btn-success btn-default dropdown-toggle" type="button" data-toggle="dropdown">
        Player 2 <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <% @players.each do |player| %>

        <option value = "<%= player.id %>"><%= player.first_name %></option>

        <% end %>
      </ul>
    </div>
 
    <button type="submit" class="btn btn-default btn-default">Submit</button>


    
    <!-- alternative to button -->
    <select class="selectpicker" name="player1">
    	<% @players.each do |player| %>

        <option value = "<%= player.id %>"><%= player.first_name %></option>

		<% end %>
	</select>
  

    <select class="selectpicker" name="player2">
    	<% @players.each do |player| %>

    	<option value = "<%= player.id %>"><%= player.first_name %></option>
		<% end %>
	</select>
    <!-- alternative to button -->

       <!-- SELECT PLAYER TO SERVE  START-->
    <div class="btn-group">
      <button class="btn btn-primary btn-default dropdown-toggle" type="button" data-toggle="dropdown">
        Select Server<span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <% @players.each do |player| %>

        <option value = "<%= player.id %>"><%= player.first_name %></option>

        <% end %>
      </ul>
    </div>
    

    <!-- SELECT PLAYER TO SERVE END -->

</form>

</body>
</html>



