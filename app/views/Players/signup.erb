<% if @player && @player.errors.any? %>
  <div>
    <strong>Some issues with your Username, please fix them:</strong>
    <ul>
      <% @player.errors.full_messages.each do |player| %>
        <li><%= player %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/application.css">
    </head>

<body>
<form method = "post" action ="/signup">
<form class="form-horizontal" role="form">
  
  <div>
    <h1 class="text-info"> SIGN UP HERE! </h1>
  </div>

  <div class="form-group">
    <label for="firstname" class="col-sm-1 control-label">First Name:</label>
    <div class="col-sm-11">
      <input type="text" name="firstname" class="form-control" id="firstname" placeholder="First name">
    </div>
  </div>

  <div class="form-group">
    <label for="last" class="col-sm-1 control-label">Last Name:</label>
    <div class="col-sm-11">
      <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Last name">
    </div>
  </div>
  
  <div class="form-group">
    <label for="email" class="col-sm-1 control-label">Email:</label>
    <div class="col-sm-11">
      <input type="text" name="email" class="form-control" id="email" placeholder="Email address">
    </div>
  </div>

  <div class="form-group">
    <label <label for="Password" class="col-sm-1 control-label">Password:</label>
    <div class="col-sm-11">
      <input type="password" name="password" class="form-control" id="Password" placeholder="Password">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <button type="submit" value="Submit" class="btn btn-default">Sign up</button>
    </div>
  </div>
</form>
</form>

</body>
</html>



