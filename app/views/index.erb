<h1 class="text-info">Squasher</h1>

<form method="post" action="/match/create">
    <div class="row">
        <div class="col-md-2">
            <div>Select Player 1:</div>
            <select name="player1">
                <% @players.each do |player| %>
                    <option value = "<%= player.id %>"><%= player.first_name %></option>
                <% end %>
            </select>
        </div>
   

        <div class="col-md-2">
            <div>Select Player 2:</div>
            <select name="player2">
                <% @players.each do |player| %>
                    <option value = "<%= player.id %>"><%= player.first_name %></option>
                <% end %>
            </select>
        </div>

        <div class="col-md-2">
            <div>Select Server:</div>
            <select name="server">
                <% @players.each do |player| %>
                    <option value = "<%= player.id %>"><%= player.first_name %></option>
                <% end %>
            </select>
        </div>

    </div>

    <div class="row top-buffer2">
        
        <div class="btn-group col-sm-6">
            <button type="submit" class="btn btn-default btn-lg btn-block">Submit</button>
        </div>

        <div class="btn-group col-sm-6">
            <button type="submit" class="btn btn-default btn-lg btn-block">Select Server</button>
        </div>
    </div>


</form>


